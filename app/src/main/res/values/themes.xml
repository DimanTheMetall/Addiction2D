<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Addiction2D" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="NavigateCard">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="strokeWidth">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="NavigateCard.AnimeNavigateCard">
        <item name="strokeColor">@color/red_pink</item>
    </style>

    <style name="NavigateTextView">
        <item name="android:textSize">36sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NavigateTextView.AnimeNavigateTextView">
        <item name="android:textColor">@color/red_pink</item>
    </style>


    <style name="NavigateCard.MangaNavigateCard">
        <item name="strokeColor">@color/blue</item>
    </style>

    <style name="NavigateTextView.MangaNavigateTextView">
        <item name="android:textColor">@color/blue</item>
    </style>


    <style name="NavigateCard.PeopleNavigateCard">
        <item name="strokeColor">@color/pink_2</item>
    </style>

    <style name="NavigateTextView.PeopleNavigateTextView">
        <item name="android:textColor">@color/pink_2</item>
    </style>


    <style name="NavigateCard.CharNavigateCard">
        <item name="strokeColor">@color/pink</item>
    </style>

    <style name="NavigateTextView.CharNavigateTextView">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>



</resources>